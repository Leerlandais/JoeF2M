        <a href="https://cf2m.be">
            <img src="images/cf2m-logo-good.png" alt="Logo CF2M" class="mx-2" style="width: 36px; height: 36px;">
        </a>
    </nav>

{% endblock %} {# end navBar #}


{% block footer %}
    <div class="d-flex w-100 justify-content-center position-absolute bottom-0 pb-4" style="width: 25%; bottom: 12rem; left: 0; right: 0; margin: 0 auto;">
