{% extends 'base.html.twig' %}
{% block head %}
    {{ parent() }}
<meta charset="UTF-8">
<meta name="viewport"
      content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
<meta http-equiv="X-UA-Compatible" content="ie=edge">

{% block stylesheets %}
    <link
            href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i"
            rel="stylesheet"
    />

    <!-- Vendor CSS Files -->
    <link href="../assets/vendor/aos/aos.css" rel="stylesheet" />
    <link
            href="../assets/vendor/bootstrap/css/bootstrap.min.css"
            rel="stylesheet"
    />
    <link
            href="../assets/vendor/bootstrap-icons/bootstrap-icons.css"
            rel="stylesheet"
    />
    <link href="../assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet" />
    <link
            href="../assets/vendor/glightbox/css/glightbox.min.css"
            rel="stylesheet"
    />
    <link href="../assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet" />

    <!-- Template Main CSS File -->
    <link href="../assets/css/style.css" rel="stylesheet" />
{% endblock %} {# end stylesheets #}
{% endblock %} {# end head #}
{% block bodyClass %}"bg-gray-300"{% endblock %} {# ajoute temporaire car c'est plus confortable pour les yeux #}
{% block header %}
    <nav class="d-flex mx-5 mt-4 w-auto border border-info rounded-pill">
        <a href="?route=home">
            <img src="images/cf2m-logo-good.png" alt="Logo CF2M" class="mx-2" style="width: 36px; height: 36px;">
        </a>
        <ul class="d-flex justify-content-evenly mx-auto" style="width: 75%;">
            <li>
                <a href="?route=home" class="text-uppercase">accueil</a>
            </li>
            <li>
                <a href="?route=cent" class="text-uppercase">Notre Centre</a>
            </li>
            <li>
                <a href="?route=form" class="text-uppercase">Formations</a>
            </li>
            <li>
                <a href="?route=work" class="text-uppercase">Travaux</a>
            </li>
            <li>
                <a href="?route=resx" class="text-uppercase">Nos Resaux</a>
            </li>
        </ul>
        <a href="https://cf2m.be">
            <img src="images/cf2m-logo-good.png" alt="Logo CF2M" class="mx-2" style="width: 36px; height: 36px;">
        </a>
    </nav>

{% endblock %}


{% block footer %}
    <div class="flex flex-row w-[25%] mx-auto justify-center absolute bottom-48 left-0 right-0">
        &copy;
        <a href="https://2023.webdev-cf2m.be/Guillaume/"
           target="_blank"
           rel="noopener noreferrer"
           class="pr-2 pl-2 text-blue-700">
            BailGui.
        </a>
        <a href="https://leerlandais.com"
           target="_blank"
           rel="noopener noreferrer"
           class="pr-3 text-blue-700">
            Leerlandais
        </a>
        {{ 'now' | date('Y') }}
    </div>
{% endblock %}